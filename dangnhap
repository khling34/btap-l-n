<body>

  <div class="form-container">
    <h2>Đặt Tour</h2>
    <form id="tourForm" action="https://docs.google.com/forms/d/e/1FAIpQLSeBSgp-PxmDhtGFjlHtK1WFCMnYwT9ddOL1U9215IxL2koSZQ/formResponse" method="POST" onsubmit="return handleSubmit(event)">
      <label for="name">Họ và tên:</label>
      <input type="text" name="entry.123456789" id="name" required>

      <label for="email">Email:</label>
      <input type="email" name="entry.987654321" id="email" required>

      <label for="tour">Tên tour muốn đặt:</label>
      <input type="text" name="entry.112233445" id="tour" required>

      <button type="submit">Gửi thông tin</button>
    </form>
  </div>

  <script>
    function handleSubmit(event) {
      // Ngăn chặn việc gửi form mặc định
      event.preventDefault();

      // Gửi form
      var form = document.getElementById("tourForm");
      var actionUrl = form.action;
      
      // Dùng fetch để gửi dữ liệu (hoặc XMLHttpRequest)
      var formData = new FormData(form);

      fetch(actionUrl, {
        method: 'POST',
        body: formData
      }).then(response => {
        // Sau khi gửi thành công, chuyển hướng đến trang mới
        window.location.href ="thanh .html";; // Thay URL này bằng trang bạn muốn chuyển đến
      }).catch(error => {
        console.error('Có lỗi xảy ra: ', error);
      });
    }
  </script>
</body>
